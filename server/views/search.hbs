<section class="search-white">
  <div class="container">
    <div class="row row-element">
      {{#each data}}
      <div class="search-col col-md-6 col-xl-4 search-element {{small category}} {{small status}}">
        <a href="/{{../type}}/view/{{_id}}">
          {{#includes ../type "project" "event"}}
          <div class="layer" style="background-image: url('/imageByName?name={{mainPhoto}}');">
            <div class="overlay">
              <h3>{{name}}</h3>
            </div>
          </div>
          {{else}}
          <div class="layer" style="background-image: url('/imageByName?name={{photos.[0]}}');">
            <div class="overlay">
              <h3>{{name}}</h3>
            </div>
          </div>
          {{/includes}}
        </a>
      </div>
      {{/each}}
    </div>
    <h2 class="none-message">No {{cap type}}s to Display...</h2>
  </div>
</section>

<script>
  const searchBox = document.querySelector(".search-box input"),
    searchBtn = document.querySelector(".search-box button"),
    inputBox = document.getElementById("input-box"),
    searchElements = document.querySelectorAll(".search-element"),
    filterBtns = document.querySelectorAll(".sub-btns, .all-btn");

  function search(e) {
    const searchValue = searchBox.value.trim().toLowerCase();
    if (searchValue != "") {
      searchElements.forEach((element) => {
        if (element.querySelector("h3").innerText.toLowerCase().startsWith(searchValue)) {
          element.classList.remove("hidden-search");
        } else {
          element.classList.add("hidden-search");
        }
      });
    } else {
      searchElements.forEach((element) => {
        element.classList.remove("hidden-search");
      });
    }
    if (document.querySelector(".search-element:not(.hidden-search):not(.hidden-filters)") != null) {
      document.querySelector(".none-message").style.display = "none";
    } else {
      document.querySelector(".none-message").style.display = "block";
    }
  }
  searchBox.addEventListener("keyup", search);
  searchBtn.addEventListener("click", search);

  function filter(e) {
    const filterValue = e.target.innerText.toLowerCase();
    if (e.target.classList.contains("active")) {
      e.target.classList.remove("active");
      searchElements.forEach((element) => {
        element.classList.remove("hidden-filters");
      });
      if (document.querySelector(".search-element:not(.hidden-search):not(.hidden-filters)") != null) {
        document.querySelector(".none-message").style.display = "none";
      } else {
        document.querySelector(".none-message").style.display = "block";
      }
      return;
    }
    filterBtns.forEach((btn) => {
      btn.classList.remove("active");
    });
    e.target.classList.add("active");
    if (!filterValue.startsWith("all")) {
      searchElements.forEach((element) => {
        if (element.classList.contains(filterValue)) {
          element.classList.remove("hidden-filters");
        } else {
          element.classList.add("hidden-filters");
        }
      });
      console.log(document.querySelector(".search-element:not(.hidden-search):not(.hidden-filters)"))
      if (document.querySelector(".search-element:not(.hidden-search):not(.hidden-filters)") != null) {
        document.querySelector(".none-message").style.display = "none";
      } else {
        document.querySelector(".none-message").style.display = "block";
      }
    } else {
      searchElements.forEach((element) => {
        element.classList.remove("hidden-filters");
      });
      if (document.querySelector(".search-element:not(.hidden-search), .search-element:not(.hidden-filters)") != null) {
        document.querySelector(".none-message").style.display = "none";
      } else {
        document.querySelector(".none-message").style.display = "block";
      }
    }
  }
  filterBtns.forEach((btn) => {
    btn.addEventListener("click", filter);
  });

  const urlParams = new URLSearchParams(window.location.search);
  const filterQuery = urlParams.get('filter');

  if (filterQuery) {
    filterBtns.forEach((btn) => {
      if (btn.innerText.toLowerCase().startsWith(filterQuery)) {
        btn.click()
        return;
      }
    });
  }

</script>