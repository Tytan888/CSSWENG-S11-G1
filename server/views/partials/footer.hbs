<!-- This partial is used to insert a footer that is used on all user-view pages. -->

<style>
    /* Set the general styling of the footer. */
    footer {
        min-height: 10vh;
        font-size: 1em;
        background-color: #f8f9fa;
        display: flex;
        align-items: flex-end;
        font-family: "PT Sans", sans-serif;
    }

    footer .col {
        margin-top: 5vh;
        margin-bottom: 5vh;

    }

    /* Set the styling of the brand text. */
    .foot-brand {
        text-decoration: none !important;
        color: var(--blueAccent);
        padding: 1vh;
        font-size: 1.5em;
    }

    /* Set the styling of the brand logo. */
    .foot-logo {
        background-image: url('/images/ico/logo-cropped.png');
        background-size: contain;
        background-repeat: no-repeat;
        display: inline-block;

        width: 4em;
        height: 4em;
    }

    /* Properly position the icons (so that they are not cropped). */
    .socmed {
        min-width: 3em;
        height: 3em;
        display: inline-block;
        background: url('/images/ico/socmed-sprites.png');
        background-repeat: no-repeat;
        background-size: 200px 140px;
    }

    #ic-fb {
        background-position: 3% 0%;
    }

    #ic-ig {
        background-position: 97.5% 0%;
    }

    #ic-x {
        background-position: 35.5% 1%;
    }

    /* Style the div that contains the copyright notice. */
    .copyright {
        background-color: #003764;
        width: 100%;
        color: white;
        display: block;
        font-family: "PT Sans", sans-serif;
        padding: 1vh;
        text-align: center;
        margin: 0 !important;
    }

    /* Position the right side of the footer, and add a border to separate it from the left side. */
    .right-side {
        display: flex;
        align-items: flex-start;
        border-left: 0.1em solid #3A7157;
        flex-direction: column;
    }

    /* Make the footer responsive to mobile devices. */
    @media (max-width: 576px) {
        .right-side {
            border-left: none;
        }

        .container {
            max-width: 90% !important;
        }
    }
</style>

<footer>
    <div class="container-fluid">
        <div class="row">
            <!-- Layout the left side of the footer, that contains the contact information and social media links. -->
            <div class="col col-12 col-sm-6" style="text-align: right; padding-right: 2vh;">
                <!-- Add the contact information from the database. -->
                <span style="font-family: var(--font-logo-text); font-weight: 600; font-size: 1.75em; ">
                    Contact Us
                </span>
                <br><br>
                {{email}}<br>
                {{phone}}<br>
                <br><br>

                <!-- Add the social media links from the database. -->
                <a href="{{facebook}}">
                    <div class="socmed" id="ic-fb"></div>
                </a>
                <a href="{{instagram}}">
                    <div class="socmed" id="ic-ig"></div>
                </a>
                <a href="{{twitter}}">
                    <div class="socmed" id="ic-x"></div>
                </a>
            </div>

            <!-- Layout the right side of the footer. -->
            <div class="col col-12 col-sm-6 right-side">

                <!-- Layout the brand logo and name. -->
                <div style="display: flex; align-items: center;">
                    <div class="foot-logo">
                    </div>

                    <a class="foot-brand" href="#">
                        <span style="
                        font-family: var(--font-button-text); 
                        font-weight: 800;">
                            Pearl S. Buck
                        </span>
                        <span style="
                        font-family: var(--font-logo-text);">
                            Philippines
                        </span>
                    </a>
                </div>

                <!-- Layout the about us text from the database. -->
                <div class="col" style="margin: 1em; width: 50%;">
                    {{aboutUs}}
                </div>
            </div>
        </div>

        <!-- Layout the bottom of the footer, that contains the copywrite notice. -->
        <div class="row">
            <div class="copyright col">
                &copy; 2023 Pearl S. Buck Philippines, All Rights Reserved
            </div>
        </div>
    </div>

</footer>