<div class = "project-view-bg" style="background: linear-gradient(to bottom, rgba(0, 42, 62, 0.65), rgba(0, 56, 38, 0.8)), url('/imageByName?name={{mainPhoto}}') center center/cover no-repeat;">
    
        <div class="row">
          <h1 class = "project-name my-4">{{name}}</h1>
        </div>
        <div class="row">
          <h2 class = "project-detail my-0">Category: {{category}}</h1>
        </div>
        <div class="row">
          <h2 class = "project-detail my-0">Location: {{location}}</h1>
        </div>
        <div class="row">
          <h2 class = "project-detail my-0">Status: {{status}}</h1>
        </div>
        <div class="row my-4"></div>
        <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="progress col-7 project-progress">
            <div class="progress-bar col-7 progress-bar-striped progress-bar-animated bg-success" id="prog-bar"role="progressbar" style="width: 0%;" aria-valuenow="{{progress}}" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
          </div>
        <div class="row align-items-center justify-content-center my-1">
          <h3 class = "project-small my-0">₱{{raisedDonations}} / ₱{{requiredBudget}} Raised</h3>
        </div>
    
</div>

<div class = "background-green p-5">
    <h3 class = "project-description mx-lg-5 mx-sm-2">{{description}}</h1>
</div>

<script>
  setTimeout(() => {document.getElementById('prog-bar').style.width = '{{progress}}%'}, 100)
  
</script>