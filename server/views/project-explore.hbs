<div><h1 class="project-explore-h1">Our Projects</h1></div>
<div class="row p-0 m-0" style=" max-width:100vw;">
  <div class="col-xl-1 col-lg-1 col-sm-0 p-0"></div>
  <div class="col-xl-4 col-lg-4 col-sm-12 p-0"><h2 class="project-explore-h2">Explore by Category</h2></div>
  <div class="col-xl-7 col-lg-7 col-sm-0 p-0"></div>
</div>

  <div class="container-fluid w-75 project-explore-container my-2">
    <div class="row g-xl-5 g-lg-4 g-md-3 g-sm-3 g-3 p-md-0 p-lg-2 ">
       <div class="col-lg-6 col-md-12">
        <a href="/project/search?category=education"><div class = "project-explore-category" style="background: linear-gradient(to bottom, rgba(0, 42, 62, 0.65), rgba(0, 56, 38, 0.8)), url('/imageByName?name={{educationPhoto}}') center center/cover no-repeat;">
          <h3>Education</h3>
        </div></a>
      </div>
      <div class="col-lg-6 col-md-12">
        <a href="/project/search?category=health"><div class = "project-explore-category" style="background: linear-gradient(to bottom, rgba(0, 42, 62, 0.65), rgba(0, 56, 38, 0.8)), url('/imageByName?name={{healthPhoto}}') center center/cover no-repeat;')">
          <h3>Health</h3>
        </div></a>
      </div>
      <div class="col-lg-6 col-md-12">
        <a href="/project/search?category=livelihood"><div class = "project-explore-category" style="background: linear-gradient(to bottom, rgba(0, 42, 62, 0.65), rgba(0, 56, 38, 0.8)), url('/imageByName?name={{livelihoodPhoto}}') center center/cover no-repeat;')">
          <h3>Livelihood</h3>
        </div></a>
      </div>
      <div class="col-lg-6 col-md-12">
        <a href="/project/search?category=psychosocial"><div class = "project-explore-category" style="background: linear-gradient(to bottom, rgba(0, 42, 62, 0.65), rgba(0, 56, 38, 0.8)), url('/imageByName?name={{psychosocialPhoto}}') center center/cover no-repeat;')">
          <h3>Psychosocial</h3>
        </div></a>
      </div>
    </div>
  </div>

<div class="project-ongoing">
  <h1 class="project-ongoing-h1">Ongoing Projects</h1>
    <div class="container w-75">
      <div class="row gx-5">
        
        {{#each ongoingProjects}}
        <div class="{{#if ../ongoing1}}col-lg-12{{/if}} {{#if ../ongoing2}}col-lg-6{{/if}} {{#if ../ongoing3}}col-lg-4{{/if}} col-md-12 my-sm-12 my-12">
            <div class="card selection-animation project-explore-card my-5">
                <img class = "status-img" src="/imageByName?name={{this.mainPhoto}}" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    {{#if this.description}}
                        <p class="card-text">{{this.description}}</p>
                    {{/if}}
                    <a href="/project/view/{{this.id}}" class="btn btn-primary">Read More...</a>
                </div>
            </div>
        </div>
        {{/each}}
        {{#unless ongoingProjects}}<h2 class="project-ongoing-h2">No Ongoing Projects Right Now...</h2>{{/unless}}
      </div>
    </div>
    {{#if ongoingProjects}}
    <div class="row justify-content-center align-items-center p-0 m-0" style=" max-width:100vw;"><a href="/project/search?status=ongoing" class="col-xl-2 col-lg-2 col-md-3 col-sm-4 col-6 btn btn-light project-ongoing-see">See More...</a></div>
    {{/if}}
</div>

