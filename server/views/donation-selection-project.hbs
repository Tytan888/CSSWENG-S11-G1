
<div class="container selection-container my-3">
    <div class="row">
        {{#each projects}}
        <div class="col-xl-3 col-lg-4 col-md-6 my-3">
            <div class="card selection-animation">
                <img class = "selection-img" src="/imageByName?name={{this.mainPhoto}}" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="donation-details-project/{{this.id}}" class="btn btn-primary">Donate to This Project</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<nav aria-label="Page navigation example justify-content-center">
    <ul class="pagination justify-content-center ">
        {{#unless min}}
            <li class="page-item"><a class="page-link" href="./donation-selection-project?page={{pages.[0]}}">Previous</a></li>
        {{/unless}}
        {{#if min}}
            <li class="page-item disabled"><a class="page-link" href="./donation-selection-project?page={{pages.[0]}}">Previous</a></li>
        {{/if}}
        {{#each pages}}
            <li class="page-item"><a class="page-link" href="./donation-selection-project?page={{this}}">{{this}}</a></li>
        {{/each}}

        {{#unless max}}
            <li class="page-item"><a class="page-link" href="./donation-selection-project?page={{pages.[2]}}">Next</a></li>
        {{/unless}}
        {{#if max}}
            <li class="page-item disabled"><a class="page-link" href="./donation-selection-project?page={{pages.[2]}}">Next</a></li>
        {{/if}}
    </ul>
</nav>