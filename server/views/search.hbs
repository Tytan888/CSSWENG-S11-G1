<style>
  * {
    margin: 0;
    padding: 0;
  }

  .search-panel {
    background-color: #007F55;
    padding: 2%;
    margin: auto;
    overflow: hidden;
  }

  .all-btn {
    width: 100%;
    background: white;
    border: 1px #0068A2;
    box-shadow: 0px 2px 0 darken(blue, 5%), 2px 4px 6px darken(blue, 2%);
    font-weight: 700;
    letter-spacing: 1px;
    font-size: 22px;
    transition: all 150ms linear;
    color: #007F55;
  }

  .sub-btns {
    width: 100%;
    height: 100%;
    background: white;
    border: 1px #0068A2;
    box-shadow: 0px 2px 0 darken(blue, 5%), 2px 4px 6px darken(blue, 2%);
    font-weight: 700;
    letter-spacing: 1px;
    font-size: 22px;
    transition: all 150ms linear;
    color: #007F55;
  }

  .btn-col {
    margin-top: 1.5% !important;
  }

  .all-btn:hover {
    background: #0068A2;
    border: 1px solid rgba(#000, .05);
    box-shadow: 1px 1px 2px rgba(#fff, .2);
    color: white;
    text-decoration: none;
    text-shadow: -1px -1px 0 darken(blue, 9.5%);
    transition: all 200ms linear;
  }

  .sub-btns:hover {
    background: #0068A2;
    border: 1px solid rgba(#000, .05);
    box-shadow: 1px 1px 2px rgba(#fff, .2);
    color: white;
    text-decoration: none;
    text-shadow: -1px -1px 0 darken(blue, 9.5%);
    transition: all 200ms linear;
  }


  .zoom {
    transition: transform .2s;
    /* Animation */
    width: 80%;
    height: 80%;
    margin: auto;
  }

  .zoom:hover {
    transform: scale(1);
  }

  #page-numbers {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .page-number {
    background-color: #555;
    /* Set the background color of the page number */
    color: #fff;
    /* Set the text color of the page number */
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s;
  }

  .page-number:hover {
    background-color: #777;
    /* Set the hover background color */
  }

  #next-page {
    text-decoration: none;
    color: #fff;
    border: 1px solid #fff;
    padding: 5px 10px;
    border-radius: 5px;
    transition: background-color 0.3s;
  }

  #next-page:hover {
    background-color: #555;
    /* Set the hover background color */
  }

  .search-box {
    width: 100%;
    background: #fff;
    border-radius: 5px;
  }

  .search-row {
    display: flex;
    align-items: center;
    margin: 15px 0;
    padding: 0px 20px;
  }


  .form-control {
    width: 200%;
    flex: 1;
    background: transparent;
    border: 0;
    outline: 0;
    color: #333;
  }

  button {
    background: transparent;
    border: 0;
    outline: 0;
  }

  button .fa-solid {
    width: 25%;
    color: #555;
    font-size: 22px;
    flex: 1;
  }

  .search-row .col:last-child {
    text-align: end;
  }

  ::placeholer {
    color: #555;
  }

  .result-box ul {
    border-top: 1px solid #999;
    padding: 15px 10px;
  }

  .result-box ul li {
    list-style: none;
    border-radius: 3px;
    padding: 15px 10px;
    cursor: pointer;
  }

  .result-box ul li:hover {
    background: #e9f3ff;
  }


  .search-green {
    background-color: #007F55;
    width: 100%;
  }

  .inner-green {
    width: 80%;
    padding-top: 5%;
    margin: auto;
  }

  .search-white {
    width: 80%;
    margin: auto;
    padding-top: 5%;
  }

  .search-col {
    text-align: center;
    border-radius: 2%;
    margin-bottom: 5%;
    position: relative;
    overflow: hidden;
  }

  .search-col img {
    width: 100%;
    display: block;
  }

  .layer {
    border: 3px solid #007F55;
    background-color: transparent;
    height: 100%;
    width: 100%;
    transition: 0.3s;
    min-height: 30vh;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 10px;
    position: relative;
    overflow: hidden;
  }

  @media (max-width: 992px) {
    .layer {
      min-height: 25vh;
    }
  }

  @media (min-width: 1200px) {
    .layer {
      min-height: 30vh;
    }
  }

  @media (min-width: 1400px) {
    .layer {
      min-height: 35vh;
    }
  }

  .layer:hover {
    border: 4px solid #0082CA;
    opacity: 0.8;
  }

  .layer h3 {
    width: 100%;
    font-weight: 800;
    color: #ffffff;
    font-size: 26px;
    transform: translateY(200%);
    transition: 0.5s;
    opacity: 0;
  }

  .layer:hover h3 {
    transform: translateX(0%);
    opacity: 1;
  }

  .overlay {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    width: 100%;
    height: 100%;
    transition: 0.3s;
  }

  .overlay:hover {
    background-color: #007F55;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .layer {
      border: 4px solid #0082CA;
      opacity: 1;
    }

    .layer h3 {
      transform: translateX(0%);
      opacity: 1;
    }

    .overlay {
      background-color: #007F55;
      opacity: 0.75;
    }
  }

  .row {
    display: flex;
  }

  @media(max-width: 768px) {
    .row {
      flex-direction: column;
    }

    .row.row-element {
      flex-direction: row;
    }

    .row.search-row {
      flex-direction: row;
      padding: 0 10px;
    }
  }

  #input-box,
  #input-box::placeholder {
    font-size: 18px;
  }

  .hidden-search {
    display: none !important;
  }

  .hidden-filters {
    display: none !important;
  }

  .all-btn.active {
    background: #0093e1;
    border: 1px solid rgba(#000, .05);
    box-shadow: 1px 1px 2px rgba(#fff, .2);
    color: white;
    text-decoration: none;
    text-shadow: -1px -1px 0 darken(blue, 9.5%);
    transition: all 200ms linear;
  }

  .sub-btns.active {
    background: #0093e1;
    border: 1px solid rgba(#000, .05);
    box-shadow: 1px 1px 2px rgba(#fff, .2);
    color: white;
    text-decoration: none;
    text-shadow: -1px -1px 0 darken(blue, 9.5%);
    transition: all 200ms linear;
  }

  .none-message {
    animation: fadeInLeft 0.5s ease-in-out;
    color: var(--foreground);
    font-family: var(--font-menu-text);
    font-weight: 500;
    text-align: center;
    margin: 30px 0 90px;
    font-size: 40px;
    text-shadow: 0 10px 10px rgba(0, 40, 75, 0.3);
    display: none;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }

    to {
      opacity: 1;
    }
  }
</style>

