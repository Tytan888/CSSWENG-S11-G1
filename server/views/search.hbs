<section class="search-panel">
  <div class="container">
    <div class="row align-items-center justify-content-center">
      <div class="col-md-9">
        <div class="row">
          <div class="col btn-col">
            <button class="btn all-btn">All Events</button>
          </div>
        </div>

        <div class="row row-bottom">
          <div class="col btn-col">
            <button class="btn sub-btns">Ongoing</button>
          </div>
          <div class="col btn-col">
            <button class="btn sub-btns">Past</button>
          </div>
          <div class="col btn-col">
            <button class="btn sub-btns">Upcoming</button>
          </div>
        </div>

        <div class="row row-bottom">
          <div class="col btn-col">
            <button class="btn sub-btns">Education</button>
          </div>
          <div class="col btn-col">
            <button class="btn sub-btns">Health</button>
          </div>
        </div>
        <div class="row row-bottom">
          <div class="col btn-col">
            <button class="btn sub-btns">Livelihood</button>
          </div>
          <div class="col btn-col">
            <button class="btn sub-btns">Psychosocial</button>
          </div>
        </div>
      </div>
      <!--- SEARCH BAR -->
    </div>
    <div class="row justify-content-center align-items-center">
      <div class="col-md-8">
        <div class="search-box">
          <div class="row search-row">
            <div class="col">
              <input type="text" name="search" id="input-box" class="form-control" placeholder="Search..."
                autocomplete="off">
            </div>
            <div class="col">
              <button><i class="fa-solid fa-magnifying-glass"></i></button>
            </div>
          </div>
          <div class="result-box">
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>

<section class="search-white">
  <div class="container">
    <div class="row">
      {{#each data}}
      <div class="search-col col-md-6">
        <div class="layer">
          <img src="/imageByName?name={{mainPhoto}}" alt="Event Image">
          <h3>{{name}}</h3>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>


